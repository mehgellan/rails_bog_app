<h2>Edit your Creature:</h2>
<fieldset>
    <%= form_for @creature do |f| %>
      <div class="form-group">
        <label>Creature name:</label>
        <%= f.text_field :name, required: true  %>
      </div>
      <div class="form-group">
        <label>Creature description:</label>
        <%= f.text_field :description, required: true  %>
      </div>
      <%= f.submit "Save Creature" %>
    <% end %>


</fieldset>
